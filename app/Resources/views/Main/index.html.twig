{% extends "::layout.html.twig" %}

{% block title %}AppBundle:Main:index{% endblock %}

{% block content %}
    <div class="col-md-6 col-md-offset-3 vertical-center">
        {{ form_start(form, {'attr': {'class': 'form-inline'}}) }}
        <div class="form-group">
            <label>{{ form_label(form.isbn, null, { 'label_attr': { 'class': 'control-label' } }) }}</label>
            {{ form_widget(form.isbn, { 'attr': { 'class': 'form-control' } }) }}
        </div>
        <div class="form-group">
            <label>{{ form_label(form.api, null, { 'label_attr': { 'class': 'control-label' } }) }}</label>
            {{ form_widget(form.api, { 'attr': { 'class': 'form-control' } }) }}
        </div>
        {{ form_widget(form.search, { 'attr': { 'class': 'btn btn-orange' } }) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
